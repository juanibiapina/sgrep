#!/usr/bin/env bash

set -e

if git rev-parse --git-dir > /dev/null 2>&1; then
  command="git grep"

  if [ -n "$VIM" ]; then
    args="-H --line-number --no-color --untracked --ignore-case"
  else
    args="-H --line-number --untracked --ignore-case"
  fi
elif hash ag 2>/dev/null; then
  command="ag"

  if [ -n "$VIM" ]; then
    args="--vimgrep"
  else
    args="--column"
  fi
elif hash ack 2>/dev/null; then
  command="ack"

  if [ -n "$VIM" ]; then
    args="-s -H --nocolor --nogroup --column --ignore-case"
  else
    args="-s -H --column --ignore-case"
  fi
else
  command="grep"
  args="-nrI"
fi

>&2 echo "Using command: $command $args $@"
${command} ${args} "$@"
